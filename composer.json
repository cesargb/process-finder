{
    "name": "cesargb/skeleton",
    "description": "package_description",
    "type": "library",
    "require": {
        "php": "^8.0"
    },
    "homepage": "https://github.com/cesargb/skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Cesar Garcia",
            "email": "cesargb@gmail.com",
            "role": "Developer"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Cesargb\\Skeleton\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "style": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/psalm"
    }
}
